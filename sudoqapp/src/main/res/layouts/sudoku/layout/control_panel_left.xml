<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlPanelLeft"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="2.5"
    android:orientation="horizontal"
    android:background="#282828" >

    <de.sudoq.view.controlpanel.VirtualKeyboardLayout
        android:id="@+id/virtual_keyboard"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="5dp" >
    </de.sudoq.view.controlpanel.VirtualKeyboardLayout>

        <!--Buttons-->
        <LinearLayout
            android:id="@+id/controls"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <!-- undo, redo, toggle -->
            <include layout="@layout/control_panel_smaller_buttons"/>

            <!-- help, actiontree -->
            <include layout="@layout/control_panel_big_buttons"/>

        </LinearLayout>

</LinearLayout>